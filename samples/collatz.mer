func collatz(n: number) -> number
{
    var i = 0
    while n != 1 do
    {
        if n % 2 == 0 then
        {
            n = n / 2
        }
        else
        {
            n = 3 * n + 1
        }
        i = i + 1
    }

    return i
}

var n = 1
while n <= 100 do
{
    if collatz(n) > 100 then
    {
        n
    }

    n = n + 1
}
